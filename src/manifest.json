{
  "manifest_version": 2,
  "name": "NQuiz",
  "version": "0.0.1",

  "description": "adds capability to save words from articles",

  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nrk.no/*",
        "https://nrkbeta.no/*",
        "https://p3.no/*"
      ],
      "run_at": "document_idle",
      "js": ["main.js"]
    }
  ]
}
