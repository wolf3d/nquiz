{
  "manifest_version": 2,
  "name": "nquizr",
  "version": "0.0.1",

  "description": "todo",

  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nrk.no/*",
        "https://nrkbeta.no/*",
        "https://p3.no/*"
      ],
      "run_at": "document_idle",
      "js": ["main.js"],
      "css": ["style.css"]
    }    
  ],
  "permissions": [
      "storage"
    ]
}
